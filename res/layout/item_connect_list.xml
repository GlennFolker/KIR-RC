<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/root_connect_list"
                                                   >
    <Button
        android:text="@string/bluetooth_connect_list"
        android:layout_width="96dp"
        android:layout_height="wrap_content" android:id="@+id/btn_connect_list"
        app:layout_constraintTop_toTopOf="@+id/text_name"
        app:layout_constraintBottom_toBottomOf="@+id/text_address" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text_name"
        app:layout_constraintEnd_toStartOf="@+id/btn_connect_list" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:id="@+id/text_address"
        app:layout_constraintTop_toBottomOf="@+id/text_name" app:layout_constraintEnd_toStartOf="@+id/btn_connect_list"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>